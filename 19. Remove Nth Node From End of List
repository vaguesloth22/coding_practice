// Brute Force: 
class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        ListNode * temp = head;
        int cnt = 0;  
        while (temp != nullptr) {
            cnt++; 
            temp = temp->next; 
        }
        temp = head; 
        if (cnt == n) {
            ListNode * toDel = head; 
            head = head->next; 
            delete toDel; 
            return head;
        }
        n = cnt - n - 1; 
        while (n > 0) {
            temp = temp->next; 
            n--; 
        }
        ListNode * toDel = temp->next; 
        temp->next = temp->next->next; 
        delete toDel;
        return head; 
    }
};
// Optimized: 
class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        ListNode * prev = new ListNode(0, head);  
        ListNode * dummy = head; 
        for (int i = 0; i < n; i++) {
            dummy = dummy->next; 
        }
        while (dummy != nullptr) {
            prev = prev->next; 
            dummy = dummy->next; 
        }
        prev->next = prev->next->next; 
        return head; 
    }
};
