// Brute Force: 
class Solution {
public:
    bool reorderedPowerOf2(int n) {
        string new_n = to_string(n);
        sort(new_n.begin(), new_n.end()); 
        for (int i = 0; i < 31; i++) {
            int num = 1 << i;  
            string new_num = to_string(num); 
            sort(new_num.begin(), new_num.end()); 
            if (new_num.size() != new_n.size()) {
                continue; 
            }
            if (new_n == new_num) {
                return true; 
            }
        }
        return false; 
    }
};
