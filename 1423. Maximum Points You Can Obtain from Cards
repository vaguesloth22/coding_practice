class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) {
        int lsum = 0, rsum = 0; 
        for (int i = 0; i < k; i++) {
            lsum += cardPoints[i]; 
        }
        int i = k - 1; 
        int j = cardPoints.size() - 1; 
        int total = lsum;
        while (i >= 0) {
            lsum -= cardPoints[i]; 
            i--; 
            rsum += cardPoints[j];
            j--; 
            total = max(total, lsum + rsum);  
        }
        return total;
    }
};
