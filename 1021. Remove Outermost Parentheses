// Approach 1: 
class Solution {
public:
    string removeOuterParentheses(string s) {
        int count = 0; 
        int length = s.size(); 
        int start = 0; 
        string answer = ""; 
        for (int i = 0; i < length; i++) {
            if (s[i] == '(') {
                count++; 
            } else {
                count--; 
            }
            if (count == 0) {
                string substr = s.substr(start + 1, i - start - 1);
                start = i + 1; 
                answer += substr; 
            }
        }
        return answer; 
    }
};
