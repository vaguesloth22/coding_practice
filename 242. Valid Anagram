// Approach 1: 
class Solution {
public:
    bool isAnagram(string s, string t) {
        if (s.length() != t.length()) return false; 
        unordered_map <char, int> mpp; 
        for (int i = 0; i < s.length(); i++) {
            mpp[s[i]]++; 
        }
        for (auto &item : mpp) {
            if (t.find(item.first) == string::npos || count(t.begin(), t.end(), item.first) != item.second) {
                return false; 
            }
        }
        return true; 
    }
};
