// try again, gg questions man..
class Solution {
public:
    bool chk_ship(vector<int> &weights, int days, int mid) {
        int sum = 0; 
        int time = days; 
        for (int w: weights) {
            if (sum + w <= mid) {
                sum += w; 
            }
            else {
                sum = w; 
                time--; 
                if (time <= 0) return false; 
            }
        }
        return true; 
    }
    int shipWithinDays(vector<int>& weights, int days) {
        int left = INT_MIN; 
        int right = 0; 
        for (int i = 0; i < weights.size(); i++) {
            left = max(left, weights[i]); 
            right += weights[i]; 
        }
        while (left <= right) {
            int mid = left + (right - left) / 2; 
            if (chk_ship(weights, days, mid) == false) {
                left = mid + 1; 
            }
            else {
                right = mid - 1; 
            }
        }
        return left; 
    }
};
