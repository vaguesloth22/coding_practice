// Hint: try to account for handling INT_MIN
class Solution {
public:
    double myPow(double x, int n) {
        if (n == 0) {
            return 1; 
        }
        if (n < 0) {
            if (n == INT_MIN) {
                return 1 / (x * myPow(x, INT_MAX)); 
            }
            n = n * -1; 
            return 1.0 / myPow(x, n); 
        }
        double half = myPow(x, n/2); 
        double result = half * half; 
        if (n % 2 == 1) {
            result = result * x; 
        }
        return result; 
    }
};
