// DP: Memoization
class Solution {
public:
    int jump (int i,vector <int> &nums, vector<int> &dp) {
        int n = nums.size(); 
        if (i >= n) return 0; 
        if (dp[i] != -1) return dp[i]; 
        int pick = nums[i] + jump(i + 2, nums, dp); 
        int not_pick = jump(i + 1, nums, dp); 
        dp[i] = max(pick, not_pick); 
        return dp[i]; 
    }
    int rob(vector<int>& nums) {
        int n = nums.size(); 
        vector <int> dp (n, -1); 
        return jump(0, nums, dp); 
    }
};
